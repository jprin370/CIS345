<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvQuestion1"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Question 1: Why do you love Fantasy Football?" />

    <EditText
        android:id="@+id/etAnswer1"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:layout_marginTop="10dp"
        android:hint="Answer 1" />

    <TextView
        android:id="@+id/tvQuestion2"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="20"
        android:text="Question 2: How many leagues do you play in?" />

    <EditText
        android:id="@+id/etAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:inputType="number"
        android:hint="Answer 2" />

    <TextView
        android:id="@+id/tvQuestion3"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Question 3: Is your favorite league PPR?" />
 
    <CheckBox
        android:id="@+id/cbYes"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Yes" />

    <TextView
        android:id="@+id/tvQuestion4"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Question 4: Which position did you draft in the 1st round of your favorite league?" />

    <RadioGroup
        android:id="@+id/rgSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rbQB"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/radio_quarterback" />

        <RadioButton
            android:id="@+id/rbRB"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_runningback" />

        <RadioButton
            android:id="@+id/rbWR"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_widereceiver" />

        <RadioButton
            android:id="@+id/rbTE"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_tightend" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvQuestion5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:text="Question 5: Date you took this survery?" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100" >

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:hint="Current Date"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_weight="47.67"
            android:text="Edit Date" />
        
        <DatePicker
        	android:id="@+id/dpSurveryDate"
        android:layout_height="wrap_content"
		android:layout_weight=".33"
		android:layout_width="0dp"
		android:textSize="12sp"
        android:visibility="gone" />"
    </LinearLayout>
           
        <Button
            android:id="@+id/btnSubmitSurvery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="25dp"
            android:text="View Answers" />
        
</LinearLayout>
</ScrollView>